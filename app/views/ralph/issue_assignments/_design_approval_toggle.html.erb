<%= turbo_frame_tag "design_approval_frame" do %>
  <div class="design-approval-toggle-container" data-controller="approval-button">
    <%= button_to toggle_design_approved_ralph_issue_assignment_path(@issue),
                  method: :post,
                  class: "design-approval-button #{@has_design_approved_label ? 'active' : ''}",
                  data: { turbo_submits_with: "○ Processing..." } do %>
      <span class="button-icon"><%= @has_design_approved_label ? '✓' : '○' %></span>
      <span class="button-text"><%= @has_design_approved_label ? 'Design Approved' : 'Approve Design' %></span>
    <% end %>
  </div>
<% end %>
