<div style="max-width: 600px; margin: 40px auto; padding: 0 20px;">
  <h1 style="margin-bottom: 30px;">Create New Ralph Project</h1>

  <%= form_with model: @project, url: projects_path, style: "background: white; padding: 30px; border: 1px solid #d0d7de; border-radius: 6px;" do |f| %>
    <% if @project.errors.any? %>
      <div style="padding: 15px; background: #ffebe9; border: 1px solid #ff8182; border-radius: 6px; margin-bottom: 20px;">
        <h3 style="margin: 0 0 10px 0; color: #d1242f; font-size: 16px;">
          <%= pluralize(@project.errors.count, "error") %> prevented this project from being saved:
        </h3>
        <ul style="margin: 0; padding-left: 20px;">
          <% @project.errors.full_messages.each do |message| %>
            <li style="color: #d1242f;"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= f.label :name, "Project Name", style: "display: block; font-weight: 600; margin-bottom: 8px;" %>
      <%= f.text_field :name,
          placeholder: "My Awesome Project",
          required: true,
          style: "width: 100%; padding: 8px 12px; border: 1px solid #d0d7de; border-radius: 6px; font-size: 14px;" %>
      <p style="margin: 8px 0 0 0; font-size: 12px; color: #656d76;">
        A human-readable name for your project
      </p>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :github_repository, "GitHub Repository", style: "display: block; font-weight: 600; margin-bottom: 8px;" %>
      <%= f.text_field :github_repository,
          placeholder: "owner/repository",
          required: true,
          pattern: "[\\w-]+/[\\w-]+",
          style: "width: 100%; padding: 8px 12px; border: 1px solid #d0d7de; border-radius: 6px; font-size: 14px;" %>
      <p style="margin: 8px 0 0 0; font-size: 12px; color: #656d76;">
        Format: <code>owner/repository</code> (e.g., <code>rails/rails</code>)
      </p>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :github_token, "GitHub Token", style: "display: block; font-weight: 600; margin-bottom: 8px;" %>
      <%= f.password_field :github_token,
          required: true,
          autocomplete: "off",
          style: "width: 100%; padding: 8px 12px; border: 1px solid #d0d7de; border-radius: 6px; font-size: 14px;" %>
      <p style="margin: 8px 0 0 0; font-size: 12px; color: #656d76;">
        Personal access token with <code>repo</code> and <code>workflow</code> scopes.
        <%= link_to "Create token →", "https://github.com/settings/tokens/new", target: "_blank", rel: "noopener", style: "color: #0969da;" %>
      </p>
    </div>

    <div style="margin-bottom: 30px;">
      <%= f.label :anthropic_api_key, "Anthropic API Key", style: "display: block; font-weight: 600; margin-bottom: 8px;" %>
      <%= f.password_field :anthropic_api_key,
          required: true,
          autocomplete: "off",
          style: "width: 100%; padding: 8px 12px; border: 1px solid #d0d7de; border-radius: 6px; font-size: 14px;" %>
      <p style="margin: 8px 0 0 0; font-size: 12px; color: #656d76;">
        Your Claude API key from Anthropic.
        <%= link_to "Get API key →", "https://console.anthropic.com/", target: "_blank", rel: "noopener", style: "color: #0969da;" %>
      </p>
    </div>

    <div style="display: flex; gap: 10px;">
      <%= f.submit "Create Project", style: "padding: 10px 20px; background: #0969da; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 14px;" %>
      <%= link_to "Cancel", projects_path, style: "padding: 10px 20px; background: #f6f8fa; border: 1px solid #d0d7de; border-radius: 6px; text-decoration: none; color: #24292f; font-weight: 600; font-size: 14px;" %>
    </div>
  <% end %>
</div>
